
{{!-- Create a table --}}
<table id="Coaches">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.trainingComplete}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new person, please enter their information below and click 'Submit'!</p>
<form id="add-person-form-ajax">
    <label for="input-name">First Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-email">Last Name: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-training">Training Complete:</label><br>
    <input type="radio" id="Yes" name="input-training">
    <label for="Yes">Yes (1)</label><br>
    <input type="radio" id="No" name="input-training">
    <label for="No">No (0)</label><br>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="../public/js/add_coach.js"></script>