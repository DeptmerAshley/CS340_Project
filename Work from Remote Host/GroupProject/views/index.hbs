{{!-- Create a table --}}
<table id="coaches-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the name, email, and trainingComplete in order --}}
        {{#each data}}
        <tr data-value={{this.coachID}}>
            <td>{{this.coachID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.trainingComplete}}</td>
            <td><button onclick="deleteCoach({{this.coachID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new person, please enter their information below and click 'Submit'!</p>
<form id="add-coach-form" method="POST" action="/add-coach-form">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email"><br><br>

    <label for="input-training">Training Complete:</label><br>
    <input type="radio" id="Yes" name="input-training" value="1">
    <label for="Yes">Yes (1)</label><br>
    <input type="radio" id="No" name="input-training" value="0">
    <label for="No">No (0)</label><br><br>

    <input type="submit">
</form>

