<h1>The server is running!</h1>
<p>If you see this text, the server is <strong>PLAYERS PAGE</strong> working!</p>


{{!-- Create a table --}}
<table id="players-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the name, email, and birthday in order --}}
        {{#each data}}
        <tr data-value={{this.playerID}}>
            <td>{{this.playerID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.birthday}}</td>
            <td><button onclick="deletePlayer({{this.playerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new person, please enter their information below and click 'Submit'!</p>
<form id="add-player-form" method="POST" action="/add-player-form">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email"><br><br>

    <input type="submit">
</form>

